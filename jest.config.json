{
  "verbose": true,
  "testEnvironment": "node",
  "moduleFileExtensions": ["js", "jsx", "ts", "tsx", "json"],
  "testMatch": [
    "<rootDir>/src/?(*.)+(spec|test).ts?(x)",
    "<rootDir>/src/utils/?(*.)+(spec|test).ts?(x)"
  ],
  "transform": {
    ".(ts|tsx)": "ts-jest"
  },
  "globals": {
    "window": {},
    "ts-jest": {
      "tsConfig": "./tsconfig.json",
      "diagnostics": {
        "ignoreCodes": [5023]
      }
    }
  },
  "setupFiles": []
}
